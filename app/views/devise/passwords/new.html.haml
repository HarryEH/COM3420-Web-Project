- content_for :title, 'Forgot password'

.row
  .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
    .panel.panel-default.margin-top-20
      .panel-heading
        %h2.panel-title Forgot your password ?
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .panel-body
          = f.error_notification
          = f.input :email, required: true, autofocus: true
        .panel-footer
          = submit_button 'Send me reset password instructions'
          .margin-top-10= render "devise/shared/links"
