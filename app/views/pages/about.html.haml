- content_for :title, "About"
- content_for :scripts do
 = javascript_include_tag 'mercury'

%div.mercury-region#about_content{ data: { mercury: 'full' } }
 =raw @about_content.content

- if mod_signed_in?
 = link_to "Edit Page", "/editor" + request.path, id: "edit_link", data: {save_url: mercury_update_page_path(@about_content)}
