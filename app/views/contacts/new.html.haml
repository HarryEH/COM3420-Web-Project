- content_for :title, "Contact"

.row
  .col-md-12
    .page-header
      %h1 Contact Us
  .col-md-12
    .panel.panel-default
      .panel-body
        .col-md-8#contact-form
          %h2 Send us a Message
          = simple_form_for @contact do |f|
            = f.input :name, :required => true
            = f.input :email, :required => true
            = f.input :message, :as => :text, :input_html => {:rows => 10}, :required => true
            = recaptcha_tags
            %br
            = f.button :submit, 'Send message', :class=> "btn btn-primary"

        .col-md-4
          %h2 Contact details
          %p
            %span.fa.fa-home{"aria-hidden" => "true"}
            %strong Address:
            23 Edward Street,
            %br
            Sheffield, UK, S3 7FG
          %p
            %span.fa.fa-phone{"aria-hidden" => "true"}
            %strong Phone:
            (+44) 08827364723
          %p
            %span.fa.fa-envelope{"aria-hidden" => "true"}
            %strong Email:
            changeme@websitename.co.uk
          %p
            %span.fa.fa-calendar{"aria-hidden" => "true"}
            %strong Working Hour:
            Monday - Friday: 9:00 AM to 5:00 PM
