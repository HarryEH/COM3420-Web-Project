- content_for :title, "Map"

.row
  .col-md-3
    %h3 Quick Links
    %table.table.table-unbordered
      %tr
        %td
          %a{:href => "/modlist"} View Moderators
      %tr
        %td
          %a{:href => "/modedit"} Edit Moderators
      %tr
        %td
          %a{:href => "/wallpapers"} Wallpaper Management

  .col-md-7
    %h3 Edits Waiting Approval
    %table.table.table-bordered
      %tr
        %th Date Edited
        %th Upload
      - @waitingApproval.each do |edit|
        %tr
        - if edit.approved != true
          %td= edit.updated_at.to_s[0, edit.updated_at.to_s.index('+')]
          %td
            %a{:href => "/media/#{edit.id}?record_id=#{edit.id}"} Link
        
